@model Item //TILLÅTER ANVÄNDNING AV "ITEMS" FRÅN DATABASEN
@{
    Layout = "_Layout"; //HÄMTAR LAYOUT FRÅN EN GEMENSAM FIL SOM HANTERAR <head>-TAGGAR, HEADER/NAVIGERING OCH FOOTERN
}

<div class="flex flexColumn">
    <h2>Lägg till pizza:</h2>
    <form asp-action="Create"> <!--FORM FÖR ATT HANTERA HTTPPOST FÖR RELEVANT VIEW I CONTROLLERN-->
        <div>
            <span>Titel:</span><br /> <input asp-for="Namn" /> <!--ASP-FOR FÖR ATT SKICKA DATAN SOM SKA "SKAPAS" GENOM MODELLEN TILL RÄTT TABELL OCH TABELLRAD-->
        </div><br />
        <div> 
            <span>Pris:</span><br /> <input asp-for="Pris" /> <!--ASP-FOR FÖR ATT SKICKA DATAN SOM SKA "SKAPAS" GENOM MODELLEN TILL RÄTT TABELL OCH TABELLRAD-->
        </div><br />
        <div>
            <span>Ingredienser:</span><br /> <input asp-for="Ingredienser" /> <!--ASP-FOR FÖR ATT SKICKA DATAN SOM SKA "SKAPAS" GENOM MODELLEN TILL RÄTT TABELL OCH TABELLRAD-->
        </div><br />
        <div class="input">
            <input type="submit" value="Spara" /> <!--SKICKAR ALL DATA NÄR MAN TRYCKER PÅ KNAPPEN-->
        </div>
    </form>
</div>